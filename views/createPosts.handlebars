<style>

    h1 {
        text-align: center;
        font-family: 'Fredoka One', cursive;
        text-shadow: 4px 4px black;
        color: rgb(188, 119, 115);

    }

    #navbar {
        background-color: rgb(188, 119, 115);
    }

    body {
        background-color: rgb(242, 242, 242);
    }

    .jumbotron {
        background-color: rgb(234, 231, 231);
        border-bottom: 2px solid black;
    }

    .btn {
        background-color:darkslateblue;
    }

</style>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">New Post</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="mx-auto">
            <form id="newPost" method="post" action="/api/newpost">
                <div class="form-group">
                    <label for="breed">Breed</label>
                    <select name="breed">
                        <option value="golden_doodle">Golden Doodle</option>
                        <option value="bulldog">Bulldog</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="post_type">Post Type</label>
                    <select name="post_type">
                        <option value="Dog Post">Dog Post</option>
                        <option value="Meet Up">Meet Up</option>
                    </select>
                </div>
                <div class="form-group">
                    {{!-- <label for="text">Post:</label> --}}
                    <textarea id="text" name="text" rows="8" cols="40" placeholder="Type your post here!"></textarea>
                </div>

                <input class="btn btn-success newPostSubmit" type="submit" value="Post" />
            </form>
        </div>
    </div>
    <footer class="page-footer font-small blue fixed-bottom scrolling-footer" id="navbar">

        <ul class="list-unstyled list-inline text-center">
            <li class="list-inline-item">
                <a href="/user/posts/{{userId}}" class="btn-lg btn-paw mx-1" type="button" role="button">
                    <i class="fas fa-paw"></i>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/posts" class="btn-floating btn-lg btn-pen mx-1" type="button" role="button">
                    <i class="fas fa-pen-fancy"></i>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/allPosts" class="btn-floating btn-lg btn-bone mx-1" type="button" role="button">
                    <i class="fas fa-bone"> </i>
                </a>
            </li>
            <li class="list-inline-item">
                <a href="/lostdogs" class="btn-floating btn-lg btn-arrow mx-1" type="button" role="button">
                    <i class="fas fa-location-arrow"> </i>
                </a>
            </li>
        </ul>
    </footer>
</div>