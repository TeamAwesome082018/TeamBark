<img src="https://i.pinimg.com/originals/ee/cb/02/eecb0228d91417e5368c7dc527c16d8f.gif" alt="Walkin' Wiener Dog">
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1> Bark! </h1>
        <br>
        <h2>Join The Rescue Squad Today</h2>
        <br>
        <br>
        <button type="button" class="btn btn-primary btn-lg btn-block" data-toggle="modal" data-target="#signUp">Create
          Account</button>
        <div class="modal fade" id="signUp">
          <div class="modal-dialogue">
            <div class="modal-content">
              <div class="modal-header">
                <h1> Sign-Up </h1>
              </div>
              <div class="modal-body">
                <form id="signup" name="signup" method="post" action="/signup">
                  <label for="email">Email Address</label>
                  <input class="text" name="email" type="email" />
                  <br>
                  <label for="firstname">Firstname</label>
                  <input name="firstname" type="text" />
                  <br>
                  <label for="lastname">Lastname</label>
                  <input name="lastname" type="text" />
                  <br>
                  <label for="zip">Zip Code</label>
                  <input name="zip" type="text" />
                  <br>
                  <label for="phone_number">Phone Number</label>
                  <input name="phone_number" type="text" />
                  <br>
                  <label for="password">Password</label>
                  <input name="password" type="password" />
                  <br>
                  <input class="btn" type="submit" value="Sign Up" />
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="close btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <a href="/signin"><button type="button" class="btn btn-secondary btn-lg btn-block">Sign In</button></a>

      </div>
    </div>
  </div>
</div>



