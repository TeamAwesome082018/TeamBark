<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h5>User Profile:</h5>
            <p>
                <strong>ID</strong>: {{userProfile.id}}
            </p>
            <p>
                <strong>Name</strong>: {{userProfile.userName}}
            </p>
            <div class="row">
                {{#each userDogsArray}}
                    <div class="card mt-4 col-6 float-left">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <p>
                                        <strong>Dog:</strong> {{this.name}}
                                    </p>
                                    {{cloudinaryIMG this.picture width=150 height=150}}
                                </div>
                                <div class="col-6">
                                    <p class="mt-5">
                                        <a href="/updateDog">Update the Doggo</a>
                                        <br>
                                        <a href="/">‚Üê Back To Home</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>